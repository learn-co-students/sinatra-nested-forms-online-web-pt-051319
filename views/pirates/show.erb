<h1>Display your Pirate here</h1>

<div class="pirate">
    <h3>Name: <%= @pirate.name %></h3><br>
    <h4>Weight: <%= @pirate.weight %></h4><br>
    <h4>Height: <%= @pirate.height %></h4>
</div>

<h2>Display your first ship here</h2>

<h1>Ships</h1>
<% @first_ship = @ships.first %>
<div class="ship">
    <p>Name: <%= @first_ship.name %></p><br>
    <p>Type: <%= @first_ship.type %></p><br>
    <p>Booty: <%= @first_ship.booty %></p>
</div><br>

<h2>Display your second ship here</h2>
<% @second_ship = @ships.last %>
<div class="ship">
    <p>Name: <%= @second_ship.name %></p><br>
    <p>Type: <%= @second_ship.type %></p><br>
    <p>Booty: <%= @second_ship.booty %></p>
</div><br>